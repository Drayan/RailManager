<div class="card">
  <h5 class="card-header">
    <span class="clearfix">
      <span class="text-uppercase">Local trains</span>
      <%= link_to new_local_train_path, { class: "float-end btn btn-primary" } do %>
        New
      <% end %>
    </span>
  </h5>

  <div class="card-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Routing tag</th>
        <th># Customers</th>
      </tr>
      </thead>
      <tbody>
      <% @locals.order(:name).each do |local| %>
        <tr>
          <td><%= local.name %></td>
          <td><%= local.routing_tag %></td>
          <td><%= local.customers.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>