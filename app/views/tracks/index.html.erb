<h1>Tracks</h1>

<%= link_to "<< Back", root_path %>
<%= link_to "New", new_track_path %>
<ul>
    <% @tracks.each do |track| %>
    <li>
        <%= link_to track.name, track_path(track) %>
        <%= link_to "Edit", edit_track_path(track) %>
        <%= link_to "Delete", track_path(track), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        }%>
    </li>
    <% end %>
</ul>