<div class="card">
  <h5 class="card-header">
    <span class="clearfix">
      <span class="text-uppercase">Yards</span>
      <%= link_to new_yard_path, { class: "float-end btn btn-primary" } do %>
        New
      <% end %>
    </span>
  </h5>

  <div class="card-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @yards.order(:name).each do |yard| %>
        <tr>
          <td><%= link_to yard.name, yard_path(yard) %></td>
          <td><%= link_to "Edit", edit_yard_path(yard) %>
          <%= link_to "Delete", yard_path(yard), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>