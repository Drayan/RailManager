<h1>Supply train blueprints</h1>

<%= link_to "<< back", root_path %>
<%= link_to "New", new_supply_train_blueprint_path %>

<% if @trains.size != 0 %>
  <ul>
    <% @trains.each do |train| %>
      <li>
        <%= train.routing_tag %> | Spawn: <%= train.spawn_point.track.name %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h5>No blueprints yet.</h5>
<% end %>